{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      "images/*": ["assets/images/*"],
      "components/*": ["src/components/*"],
      "features/*": ["src/features/*"],
      "hooks/*": ["src/hooks/*"],
      "lib/*": ["src/lib/*"],
      "navigation/*": ["src/navigation/*"],
      "redux/*": ["src/redux/*"],
      "screens/*": ["src/screens/*"],
      "services/*": ["src/services/*"],
      "theme/*": ["src/theme/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
